<h1>Listing des anecdotes</h1>

<table>
  <thead>
    <tr>
      <th>Sujet</th>
      <th>Theme</th>
      <th>Chapitre</th>
      <th>Voir les infos</th>
      <th>Modifier</th>
      <th>Supprimer</th>
    </tr>
  </thead>

  <tbody>
    <% @anecdotes.each do |anecdote| %>
      <tr>
        <td><%= anecdote.sujet %></td>
        <td><%= anecdote.theme %></td>
        <td><%= anecdote.chapitre_id %></td>
        <td><%= link_to 'Infos', anecdote %></td>
        <td><%= link_to 'Editer', edit_anecdote_path(anecdote) %></td>
        <td><%= link_to 'Supprimer', anecdote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

